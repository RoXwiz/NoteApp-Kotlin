<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/colorTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor00"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor01"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor02"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor03"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor04"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor05"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor06"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor07"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
            <Button
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/btnColor08"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon="@drawable/baseline_done_24"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:iconGravity="textStart"/>

</androidx.constraintlayout.widget.ConstraintLayout>